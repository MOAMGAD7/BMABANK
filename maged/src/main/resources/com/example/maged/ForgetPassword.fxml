<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.ForgetPasswordController">
    <Text text="Forget Password" style="-fx-font-size: 24px; -fx-fill: #2c3e50;" />
    <Label text="Enter your email to receive a verification code:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
    <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px;" />
    <Label fx:id="emailError" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" />
    <Button fx:id="sendCodeButton" text="Send Verification Code" onAction="#handleSendCode" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" />
    <Button text="Back to Login" onAction="#switchToLogin" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 14px;" />
</VBox>