<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo3.HelloController">

    <TextField fx:id="usernameField" alignment="CENTER" promptText="Enter your username" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
    <ComboBox fx:id="colorSchemeCombo" promptText="Select Color Scheme" />
    <ComboBox fx:id="fontSizeCombo" promptText="Select Font Size" />
    <Button fx:id="applyButton" onAction="#applyChanges" text="Apply Changes" />
</VBox>
